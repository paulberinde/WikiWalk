<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.mprog.wikiwalk.MainActivity"
    android:background="@drawable/background"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logotest3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:alpha="0.85"
        android:elevation="3dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="Free-Roam"
        android:id="@+id/btnRoam"
        android:onClick="goToMap"
        android:background="#08AE9E"
        android:textColor="@android:color/white"
        android:ellipsize="marquee"
        android:textSize="20dp"
        android:elegantTextHeight="true"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/btnCollection"
        android:layout_centerHorizontal="true"
        android:alpha="0.85"
        android:elevation="3dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="View Card Collection"
        android:id="@+id/btnCollection"
        android:onClick="goToCollection"
        android:background="#08AE9E"
        android:textColor="@android:color/white"
        android:ellipsize="marquee"
        android:textSize="20dp"
        android:elegantTextHeight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnRoam"
        android:alpha="0.85"
        android:elevation="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/xxx"
        android:alpha="0.4"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
