<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullscreenTitleView"
        android:textColor="#000000"
        android:layout_weight="0.16"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="1.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text=""
        android:id="@+id/separator1"
        android:background="#08AE9E"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:alpha="0.85"
        android:layout_below="@+id/fullscreenTitleView"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fullscreenImageView"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fullscreenTitleView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text=""
        android:id="@+id/separator2"
        android:background="#08AE9E"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="0.85"
        android:layout_below="@+id/fullscreenImageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/addressView"
        android:textColor="#000000"
        android:layout_below="@+id/separator2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text=""
        android:id="@+id/separator3"
        android:background="#08AE9E"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="0.85"
        android:layout_below="@+id/addressView"/>

     <TextView
        android:layout_height="25dp"
        android:layout_width = "match_parent"
        android:id="@+id/locationView"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/separator3"
        android:textSize="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="1"
         android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text=""
        android:id="@+id/separator4"
        android:background="#08AE9E"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="0.85"
        android:layout_below="@+id/locationView"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/categoryView"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/separator4"
        android:textSize="16sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
          android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:text=""
        android:id="@+id/separator5"
        android:background="#08AE9E"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="0.85"
        android:layout_below="@+id/categoryView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Ga naar Wikipedia"
        android:id="@+id/wikipediaButton"
        android:layout_below="@+id/separator5"
        android:background="#08AE9E"
        android:textColor="@android:color/white"
        android:ellipsize="marquee"
        android:textSize="20dp"
        android:elegantTextHeight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:alpha="0.85"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wikipediaView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:elevation="3dp" />

</RelativeLayout>